{
    "name": "babel-compiler",
    "displayName": "babel-compiler",
    "description": "a babel transform extension",
    "version": "0.0.2",
    "publisher": "babel-compiler",
    "engines": {
        "vscode": "^1.20.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "workspaceContains:**/*.js",
        "onLanguage:js"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [
            {
                "command": "babelCompiler.command.watchJS",
                "title": "WatchJS",
                "category": "babelCompiler"
            },
            {
                "command": "babelCompiler.command.stopWatchJS",
                "title": "stopWatchJS",
                "category": "babelCompiler"
            },
            {
                "command": "babelCompiler.command.oneTimeCompileJS",
                "title": "oneTimeCompileJS",
                "category": "babelCompiler"
            }
        ],
        "configuration": {
            "title": "Babel Compiler config",
            "properties": {
                "BabelCompiler.settings.options": {
                    "type": "object",
                    "default": {
                        "babel": {
                            "presets": [
                                "env"
                            ]
                        },
                        "savePath": "~/../scripts/"
                    }
                },
                "BabelCompiler.settings.excludeList": {
                    "type": "array",
                    "default": [
                        "**/node_modules/**",
                        ".vscode/**",
                        "**/scripts/**"
                    ],
                    "description": "ignore some folder"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "typescript": "^2.6.1",
        "vscode": "^1.0.0"
    },
    "dependencies": {
        "@types/babel-core": "^6.25.3",
        "@types/glob": "^5.0.35",
        "babel-core": "^6.26.0",
        "glob": "^7.1.2"
    }
}
